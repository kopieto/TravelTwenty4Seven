<%- include("../partials/header") -%>
<%- include("../partials/user-header") -%>
<div class="parcels-body">
    <p class="">Delivery details</p>

    <form id="parcels-form" class="parcels-form" action="/parcels" method="POST">
        <div>

            <div class="form-element">
                <input name="rName" type="text" autocomplete="off" placeholder="Name">
            </div>

            <div class="form-element">
                <input name="rPhoneNumber" type="text" autocomplete="off" placeholder="Phone Number">
            </div>

            <div class="form-element">
                <input name="rCountry" type="text" autocomplete="off" placeholder="Country">
            </div>

            <div class="form-element">
                <input name="rCity" type="text" autocomplete="off" placeholder="City">
            </div>

            <div class="form-element">
                <input name="rStreet" type="text" autocomplete="off" placeholder="Street">
            </div>

            <div class="form-element">
                <input name="rPostcode" type="text" autocomplete="off" placeholder="Postcode">
            </div>
        </div>

        <div>
            <div class="form-element">
                <textarea class="parcels-textarea" name="comment" id="" cols="10" rows="1"
                    placeholder="Leave a comment"></textarea>
            </div>
            <div class="form-element">

                <button class="btn btn-right" form="parcels-form" type="submit">send</button>
            </div>
        </div>

    </form>

</div>
<%- include("../partials/user-footer") -%>
<%- include("../partials/footer") -%>