<%- include("../partials/header") -%>
<div class="parcels-form-body"></div>
<form id="form-parcel" class="body-parcels" action="/parcels" method="POST">

    <div class="form-box1">
        <h2>Sender info</h2>

        <div class="form-element">
            <input name="senderName" type="text" autocomplete="off" placeholder="Name" required>
        </div>

        <div class="form-element">
            <input name="senderNumber" type="text" autocomplete="off" placeholder="Phone Number" required>
        </div>
        <div class="form-element">
            <input name="senderEmail" type="text" autocomplete="off" placeholder="Email">
        </div>

        

        <div class="form-element">
            <input name="senderAddress" type="text" autocomplete="off" placeholder="Address">
        </div>
    </div>

    <div class="form-box2">
        <h2>Delivery info</h2>
        <div class="form-element">
            <input name="receiverName" type="text" autocomplete="off" placeholder="Name">
        </div>

        <div class="form-element">
            <input name="receiverNumber" type="text" autocomplete="off" placeholder="Phone Number">
        </div>
        <div class="form-element">
            <input name="receiverEmail" type="text" autocomplete="off" placeholder="Email">
        </div>
        
        <div class="form-element">
            <input name="receiverAddress" type="text" autocomplete="off" placeholder="Address">
        </div>

        <div class="comment-element">
            <label>Comment</label>
            <textarea name="comment" id="" cols="20" rows="4"></textarea>
        </div>
        <button class="btn btn-sent" form="form" type="submit">send</button>

    </div>



    <!-- <script src="js/checkbox.js"></script> -->


</form>

<%- include("../partials/footer") -%>